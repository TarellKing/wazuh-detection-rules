<group name="powershell">
  <rule id="100201" level="12">
    <if_sid>18107</if_sid>
    <regex field="win.eventdata.Image">.*\\powershell\.exe</regex>
    <regex field="win.eventdata.CommandLine">(Invoke-WebRequest|wget|bitsadmin)</regex>
    <description>Suspicious PowerShell file download detected</description>
    <mitre>
      <id>T1059.001</id>
      <id>T1105</id>
    </mitre>
  </rule>
</group>
